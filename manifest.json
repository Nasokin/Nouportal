{
  "manifest_version": 2,
  "name": "Nouportal",
  "version": "0.0.8",

  "description": "OU Portal Autofill",

  "permissions": [
    "storage",
    "<all_urls>"
  ],

  "browser_action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "logout.png",
      "48": "logout.png",
      "128": "logout.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "https://ou-idp.auth.osaka-u.ac.jp/idp/*",
        "https://www.cle.osaka-u.ac.jp/*",
        "https://koan.osaka-u.ac.jp/*"
      ],
      "js": ["nouportal.js"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "boxision@gmail.com"
    }
  }
}